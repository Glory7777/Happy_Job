
#container li.contents {font-family: '나눔바른고딕',NanumBarunGothic;}

.content	label	{vertical-align: middle;}
.content	input, .content select	{border: 1px solid #bbc2cd;padding-left:2px;}
.content	select	{width: 180px;height: 30px;}
.content	input.searchKeyWord	{width: 166px;height: 24px;padding:0 5px;line-height: 22px;}
.content	input.modalInput{/* display:inline-table; */width: 50%;height: 28px;border: 1px solid #cdcdcd;line-height: 23px;}
.content	input[type="file"]{border: 0px;}
.content	textarea {width: calc(100% - 4px);padding-left:2px;height: 70px;text-align:left;vertical-align: top;}

input[type="text"].input_check {width: 15px;height: 15px;padding:0;border:0;overflow:hidden; font-size:0; line-height:0;background: url("/images/admin/comm/input_check.png") 0 0 no-repeat;}
input[type="text"].input_check.check_o {background-position: 0 -15px;}
input[type="text"].input_check.check_x {background-position: 0 -30px;}

